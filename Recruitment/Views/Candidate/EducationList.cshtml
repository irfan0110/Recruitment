@model IEnumerable<Recruitment.Models.EducationDTO>
@{
    ViewBag.Title = "EducationList";
    Layout = null;
}
<br>
<div align="right">
    <a href="~/Education/AddEducation/" class="btn btn-primary"><i class="fa fa-pencil"> Add Education</i></a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>University / School</th>
            <th>Major</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Degree</th>
            <th>GPA</th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.EducationName</td>
                <td>@item.Major</td>
                <td>@item.TahunMasuk</td>
                <td>@item.TahunLulus</td>
                <td>@item.Degree</td>
                <td>@item.GPA.ToString("0.00")</td>
                <td><a href="~/Education/EditEducation/@item.EducationId" class="btn btn-warning" btn-sm><i class="fa fa-pencil-square-o"></i></a></td>
            </tr>
        </tbody>
    }
</table>
