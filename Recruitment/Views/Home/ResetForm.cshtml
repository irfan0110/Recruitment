@model Recruitment.Models.ResetViewModel
@using Recruitment.Models;


<h3>Edit Password</h3>
<hr class="bg-blue" />


@using (Html.BeginForm("ResetPass", "Home", FormMethod.Post))
{
    <div class="row">
        @Html.TextBoxFor(model => model.Username, null, new { @class = "form-control", type = "hidden" })
        <div class="col-lg-6">
            @if (TempData["validasi"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>@TempData["validasi"]</strong>
                </div>
            }
            <div class="form-group">
                <label>Password Lama</label>
                @Html.TextBoxFor(model => model.Password, null, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Password Baru</label>
                @Html.TextBoxFor(model => model.NewPassword, null, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>

            <input type="submit" class="btn btn-danger btn-sm" value="Change" />
        </div>

    </div>



}