@model Recruitment.Models.MenuModels

@{
    ViewBag.Title = "Form Edit Menu";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditMenu</title>
</head>
<body>
